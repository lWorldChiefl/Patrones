@model BusinessLayer.Proyecto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Proyectos</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.proyectId)

        <div class="form-group">
            <div class="col-md-8" style="text-align :center">
                <img src="@Url.Content(Model.proyectImage)" style="height:150px;width:150px;" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.proyectName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.proyectName)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Precio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.proyectDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.proyectDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Stock", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.proyectStock, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.proyectStock)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Categoria", "categoryId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownListFor(x => x.categoryId, (IEnumerable<SelectListItem>)ViewBag.tipo_Categoria, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.categoryId)
            </div>
        </div>

        @Html.HiddenFor(model => model.proyectImage)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>

}
